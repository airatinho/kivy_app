<Container>
    rows:3
    padding:50

    text_input: text_input
    label_widget: label

    TextInput:
        id: text_input
        size_hint:1,0.4
        multilene:False
        font_size:40
    Label:
        id: label
        text:"Some text"
    FloatLayout:
        Button:
            size_hint:0.5,0.4
            pos_hint: {"center_x": .5, "center_y": .1}
            font_size:40
            text: 'Hello, nigga!'
            on_release:
                root.change_text()